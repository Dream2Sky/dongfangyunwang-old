
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/LayoutPage.cshtml";
}

@using com.dongfangyunwang.entity
@model com.dongfangyunwang.web.Models.InformationModel
<style>
    .td-btn {
        text-align: right;
    }

    .div-single-data, .div-excel-data {
        display: none;
    }

    .alert-active {
        display: block;
    }
</style>

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="/">管理后台</a></li>
            <li class="active">数据修改</li>
        </ol>
    </div>
    <div class="container">


        <div class="alert alert-error div-single-data">
            <a class="close" data-dismiss="alert">×</a>
            <strong>修改此条数据失败! </strong>请联系管理员
        </div>
        <label>
            数据修改
        </label>
        <form id="singleInformation-form">
            <table class="table">
                <tr>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">客户姓名</span>
                            <input type="text" class="form-control" placeholder="客户姓名" name="customerName" aria-describedby="basic-addon1" value="@Model.CustomerName" disabled="disabled">
                            <input type="hidden" name="informationId" value="@Model.Id" />
                        </div>
                    </td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">性别</span>
                            <select name="sex" class="form-control">
                                @if (Model.Sex == "男")
                                {
                                    <option selected="selected">男</option>
                                    <option>女</option>
                                }
                                else
                                {
                                    <option>男</option>
                                    <option selected="selected">女</option>
                                }
                            </select>
                        </div>
                    </td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">年龄</span>
                            <input type="text" class="form-control" placeholder="年龄" name="age" aria-describedby="basic-addon1" value="@Model.Age">
                        </div>
                    </td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">婚否</span>
                            <select name="ismarry" class="form-control">
                                @if (Model.IsMarry == "是")
                                {
                                    <option selected="selected">是</option>
                                    <option>否</option>
                                }
                                else
                                {
                                    <option>是</option>
                                    <option selected="selected">否</option>
                                }
                            </select>
                        </div>
                    </td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">子女</span>
                            <select name="children" class="form-control">
                                @if (Model.Children == "有")
                                {
                                    <option selected="selected">有</option>
                                    <option>无</option>
                                }
                                else
                                {
                                    <option>有</option>
                                    <option selected="selected">无</option>
                                }
                            </select>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">地址省市</span>
                            <input type="text" class="form-control" placeholder="地址省市" name="address" aria-describedby="basic-addon1" value="@Model.Address">
                        </div>
                    </td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">所属行业</span>
                            <input type="text" class="form-control" placeholder="所属行业" name="industry" aria-describedby="basic-addon1" value="@Model.Industry">
                        </div>
                    </td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">职业</span>
                            <input type="text" class="form-control" placeholder="职业" name="occupation" aria-describedby="basic-addon1" value="@Model.Occupation">
                        </div>
                    </td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">年收入</span>
                            <input type="text" class="form-control" placeholder="年收入" name="income" aria-describedby="basic-addon1" value="@Model.Income">
                        </div>
                    </td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">爱好</span>
                            <input type="text" class="form-control" placeholder="爱好" name="hobby" aria-describedby="basic-addon1" value="@Model.Hobby">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">客户电话</span>
                            <input type="text" class="form-control" placeholder="客户电话" name="phone" aria-describedby="basic-addon1" value="@Model.Phone">
                        </div>
                    </td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">QQ</span>
                            <input type="text" class="form-control" placeholder="QQ" name="qq" aria-describedby="basic-addon1" value="@Model.QQ">
                        </div>
                    </td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">微信号</span>
                            <input type="text" class="form-control" placeholder="微信号" name="webcat" aria-describedby="basic-addon1" value="@Model.WebCat">
                        </div>
                    </td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">邮箱</span>
                            <input type="email" class="form-control" placeholder="邮箱" name="email" aria-describedby="basic-addon1" value="@Model.Email">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">是否有车</span>
                            <select name="hascar" class="form-control">
                                @if (Model.HasCar == "是")
                                {
                                    <option selected="selected">是</option>
                                    <option>否</option>
                                }
                                else
                                {
                                    <option>是</option>
                                    <option selected="selected">否</option>
                                }
                            </select>
                        </div>
                    </td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">是否有房</span>
                            <select name="hashouse" class="form-control">
                                @if (Model.HasHouse == "否")
                                {
                                    <option selected="selected">是</option>
                                    <option>否</option>
                                }
                                else
                                {
                                    <option>是</option>
                                    <option selected="selected">否</option>
                                }
                            </select>
                        </div>
                    </td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">备注1</span>
                            <input type="text" class="form-control" placeholder="备注1" name="note1" aria-describedby="basic-addon1" value="@Model.Note1">
                        </div>
                    </td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">备注2</span>
                            <input type="text" class="form-control" placeholder="备注2" name="note2" aria-describedby="basic-addon1" value="@Model.Note2">
                        </div>
                    </td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">备注3</span>
                            <input type="text" class="form-control" placeholder="备注3" name="note3" aria-describedby="basic-addon1" value="@Model.Note3">
                        </div>
                    </td>
                </tr>
                @for (int i = 0; i < (int)((ViewData["FollowItems"] as IEnumerable<Follow>).Count() / 3); i++)
            {
                    <tr>
                        @for (int j = i * 3; j < 3 * (i + 1); j++)
                {
                            <td>
                                <div class="input-group">
                                    <span class="input-group-addon" id="basic-addon1">@((ViewData["FollowItems"] as IEnumerable<Follow>).ElementAt(j).FollowItem)</span>
                                    <input type="text" class="form-control input-follow" placeholder="@((ViewData["FollowItems"] as IEnumerable<Follow>).ElementAt(j).FollowItem)" name="@((ViewData["FollowItems"] as IEnumerable<Follow>).ElementAt(j).FollowItem)" aria-describedby="basic-addon1"
                                           value="@((Model.FollowList.Where(n=>n.FollowName==(ViewData["FollowItems"] as IEnumerable<Follow>).ElementAt(j).FollowItem).SingleOrDefault()!=null)?Model.FollowList.Where(n=>n.FollowName==(ViewData["FollowItems"] as IEnumerable<Follow>).ElementAt(j).FollowItem).SingleOrDefault().FollowValue:"")">
                                </div>
                            </td>
                        }
                    </tr>
                }
                <tr>
                    @for (int i = 0; i < ((ViewData["FollowItems"] as IEnumerable<Follow>).Count() % 3); i++)
            {
                        <td>
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">@((ViewData["FollowItems"] as IEnumerable<Follow>).ElementAt((int)(ViewBag.Count) - i - 1).FollowItem)</span>
                                <input type="text" class="form-control input-follow" placeholder="@((ViewData["FollowItems"] as IEnumerable<Follow>).ElementAt((int)(ViewBag.Count)-i-1).FollowItem)" name="@((ViewData["FollowItems"] as IEnumerable<Follow>).ElementAt((int)(ViewBag.Count)-i-1).FollowItem)" aria-describedby="basic-addon1"
                                       value="@((Model.FollowList.Where(n=>n.FollowName == (ViewData["FollowItems"] as IEnumerable<Follow>).ElementAt((int)(ViewBag.Count)-i-1).FollowItem).SingleOrDefault()!=null)?Model.FollowList.Where(n=>n.FollowName == (ViewData["FollowItems"] as IEnumerable<Follow>).ElementAt((int)(ViewBag.Count)-i-1).FollowItem).SingleOrDefault().FollowValue:"")">
                            </div>
                        </td>
                    }
                </tr>
                <tr>
                    <td colspan="5" class="td-btn">
                        <button class="btn btn-primary" type="button" onclick="Update();">提交修改</button>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>
<script src="~/Content/js/bootstrapValidator.min.js"></script>
<script>
    function Update() {

        var msg = "";
        var customerName = $("input[name='customerName']").val();
        var age = $("input[name='age']").val();
        var income = $("input[name='income']").val();
        if (customerName == null || customerName == "") {
            msg += "客户名称不能为空\n";
        }

        if (age == null || age == "") {

        }
        else {
            if (isNaN(age)) {
                msg += "年龄必须是数字\n";
            }
            else {
                if (!(age >= 0 && age <= 150)) {
                    msg += "年龄超出合法范围 [0-150]";
                }
            }
        }

        if (income == "" || income == null) {

        }
        else {
            if (isNaN(income)) {
                msg += "收入必须是数字\n";
            }
            else {
                if (income < 0) {
                    msg += "收入必须大于0";
                }
            }
        }

        if (msg != "") {
            alert(msg);
        }
        else {
            var json = new Object();
            json.id = $("input[name='informationId']").val();
            json.customerName = customerName;
            json.sex = $("select[name='sex']").val();
            json.age = age;
            json.ismarry = $("select[name='ismarry']").val();
            json.children = $("select[name='children']").val();
            json.address = $("input[name='address']").val();
            json.industry = $("input[name='industry']").val();
            json.occupation = $("input[name='occupation']").val();
            json.income = income;
            json.hobby = $("input[name='hobby']").val();
            json.phone = $("input[name='phone']").val();
            json.qq = $("input[name='qq']").val();
            json.webcat = $("input[name='webcat']").val();
            json.email = $("input[name='email']").val();
            json.hascar = $("select[name='hascar']").val();
            json.hashouse = $("select[name='hashouse']").val();
            json.note1 = $("input[name='note1']").val();
            json.note2 = $("input[name='note2']").val();
            json.note3 = $("input[name='note3']").val();

            var str = JSON.stringify(json);
            $(".input-follow").each(function () {
                str = str.replace("}", ",\"" + $(this).attr('name') + "\":" + "\"" + $(this).val() + "\"}");
            });
            $.ajax({
                url: "/Information/Update",
                type: "POST",
                data: str,
                success: function (data) {
                    if (data == "True") {
                        alert("修改成功");
                        window.history.go(-1);
                    }
                    else {
                        $('.div-single-data').addClass("alert-active");
                    }
                }
            });
        }
    }
</script>